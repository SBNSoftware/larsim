    <!-- <numjobs>100</numjobs> -->
    <numjobs>1</numjobs>
    <datatier>generated</datatier>
    <memory>2000</memory>
    <jobsub> --expected-lifetime=2h -Q --generate-email-summary -l '+SingularityImage="/cvmfs/singularity.opensciencegrid.org/fermilab/fnal-wn-sl7:latest"' </jobsub>
    <disk>80GB</disk>
  </stage>

  <!-- file type -->
  <filetype>&file_type;</filetype>

  <!-- run type -->
  <runtype>&run_type;</runtype>

</project>